<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <Space
        android:id="@+id/viewholder_message_space_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3" />

    <FrameLayout
        android:id="@+id/viewholder_message_bubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0.7"
        android:background="@drawable/shape_message_bubble_end"
        android:minHeight="32dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewholder_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp" />
    </FrameLayout>


    <Space
        android:id="@+id/viewholder_message_space_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:visibility="gone" />
</LinearLayout>